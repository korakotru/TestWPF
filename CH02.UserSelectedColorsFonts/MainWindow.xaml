<Window x:Class="CH02.UserSelectedColorsFonts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Margin="10" Fill="{DynamicResource {x:Static SystemColors.DesktopBrushKey}}" ></Rectangle>
        <TextBlock Grid.Row="1" Text="Hello from Active Caption Font" FontFamily="{DynamicResource {x:Static SystemFonts.CaptionFontFamilyKey}}" FontSize="{DynamicResource {x:Static SystemFonts.CaptionFontSizeKey}}" ></TextBlock>
    </Grid>
    
</Window>
