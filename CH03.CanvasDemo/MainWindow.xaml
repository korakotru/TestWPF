<Window x:Class="CH03.CanvasDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <Ellipse Stroke="Black" StrokeThickness="2" 
                 Fill="Red" Canvas.Right="50" Canvas.Top="40" 
                 Width="50" Height="50"></Ellipse>
        <TextBlock Text="Canvas Demo" FontSize="20" 
                   Canvas.Left="100" Canvas.Top="20"></TextBlock>
        <Rectangle Stroke="Black" StrokeThickness="1" Fill="LightBlue"
                   Canvas.Bottom="0" Canvas.Left="40"
                   Width="30" Height="100"></Rectangle>
    </Canvas>
   
</Window>
