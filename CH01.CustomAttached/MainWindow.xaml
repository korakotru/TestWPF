<Window x:Class="CH01.CustomAttached.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CH01.CustomAttached"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Canvas>
        <Ellipse x:Name="ellipse" Fill="Red" Width="100" Height="60" local:RotationManager.Angle="45"  > 
        </Ellipse>
        <Rectangle x:Name="rectangle" Fill="Blue" Width="80" Height="80" local:RotationManager.Angle="30" Canvas.Left="100" Canvas.Top="100" />
        <Button x:Name="button" Content="Hello" Canvas.Left="130" Canvas.Top="30" local:RotationManager.Angle="90" FontSize="20" />
    </Canvas>
</Window>
