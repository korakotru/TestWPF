<Window x:Class="CH02.SimpleSources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <LinearGradientBrush x:Key="brush1">
            <GradientStop Offset="0" Color="Yellow" />
            <GradientStop Offset="1" Color="Brown" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="brush3">
            <GradientStop Offset="0" Color="Red" />
            <GradientStop Offset="1" Color="Orange" />
        </LinearGradientBrush>
        <DataTemplate x:Key="temp1">
            <Rectangle Fill="{StaticResource brush3}"
StrokeThickness="4" Stroke="DarkBlue" />
        </DataTemplate>
    </Window.Resources>
    <StackPanel  >
        <Rectangle Height="50" Stroke="Black" Fill="{StaticResource brush1}" >
        </Rectangle>
        <Rectangle Name="rect2" Height="50" Stroke="Black"   >
        </Rectangle>
        <Ellipse StrokeThickness="20" Height="100"  Stroke="{StaticResource brush3}" > 
        </Ellipse>
        <Button Content="Modity brush" Height="39" Click="Button_Click"/>

    </StackPanel>
</Window>
