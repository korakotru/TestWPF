<Window x:Class="CH03.SimpleDragDrop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="40"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="2" BorderBrush="Black">
            <Canvas x:Name="_source" Background="White"></Canvas>
        </Border>
        <Border BorderBrush="Black" BorderThickness="2" Grid.Column="2">
            <WrapPanel ItemHeight="50" ItemWidth="50" x:Name="_target" Background="Yellow"></WrapPanel>
        </Border>
    </Grid>
</Window>
